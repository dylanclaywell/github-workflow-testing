{
  "env": {
    "node": true,

    "es2024": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",

    "parser": "@typescript-eslint/parser",

    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts"],

      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
